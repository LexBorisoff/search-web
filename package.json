{
  "name": "search-web",
  "version": "0.0.0-semantically-released",
  "description": "CLI for making browser web searches from the shell",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "prepack": "npm run build",
    "prebuild": "npm run ci && rimraf ./dist",
    "build": "npm run compile && npm run import-alias",
    "ci": "npm run check:style && npm run check:build",
    "check:build": "npm run compile -- --noEmit",
    "check:style": "npm run check:format && npm run check:lint",
    "check:format": "prettier --check \"*.{js,cjs,mjs,ts,cts,mts}\" \"src/**/*.ts\"",
    "check:lint": "eslint \"src/**/*.{js,ts}\"",
    "compile": "tsc -p tsconfig.json",
    "import-alias": "tsc-alias -p tsconfig.json",
    "style": "npm run format && npm run lint",
    "format": "prettier --write \"*.{js,cjs,mjs,ts,cts,mts}\" \"src/**/*.ts\"",
    "lint": "npm run check:lint -- --fix",
    "prepare": "husky"
  },
  "author": "Lex Borisoff <lex@borisoff.dev>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LexBorisoff/search-web.git"
  },
  "homepage": "https://github.com/LexBorisoff/search-web/tree/main#readme",
  "bugs": {
    "url": "https://github.com/LexBorisoff/search-web/issues"
  },
  "exports": {
    "./config": {
      "types": "./dist/types/config/index.d.ts",
      "import": "./dist/bin/config/index.js",
      "default": "./dist/bin/config/index.js"
    }
  },
  "bin": {
    "web": "dist/bin/index.js"
  },
  "keywords": [
    "cli",
    "search",
    "websearch",
    "web-search",
    "search-web",
    "search-engine",
    "browser-query",
    "web-query",
    "browser",
    "google",
    "chrome",
    "firefox",
    "edge",
    "brave"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.10.0"
  },
  "dependencies": {
    "@lexjs/prompts": "^1.1.4",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "execa": "^8.0.1",
    "open": "^10.2.0",
    "type-fest": "^4.15.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@lexjs/eslint-plugin": "^1.1.2",
    "@types/node": "^18.17.6",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.24",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5"
  }
}
